@model IEnumerable<AplicacionWeb.Models.Noticias>

@{
    ViewBag.Title = "Noticias";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var categorias = new List<string> {
        "Policiales", "Deportes", "Política", "Educación", "Salud",
        "Turismo", "Tránsito y transporte", "Internacionales"
    };

    string categoriaActual = ViewBag.Categoria as string;

    var roles = Session["Roles"] as List<string> ?? new List<string>();
    bool esEditor = roles.Contains("Editor");
    bool esAdmin = roles.Contains("Admin");
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<h2>Noticias</h2>

@if (esEditor || esAdmin)
{
    <p>
        @Html.ActionLink("Crear nueva noticia", "Create", null, new { @class = "btn btn-success" })
    </p>
}

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Sidebar de Categorías -->
        <div class="col-md-2">
            <div class="d-flex flex-column gap-2">
                @foreach (var cat in categorias)
                {
                    <a class="btn btn-dark @(categoriaActual == cat ? "active" : "")"
                       href="@Url.Action("Index", "Noticias", new { categoria = cat })">
                        @cat
                    </a>
                }
            </div>
        </div>

        <!-- Grilla de Noticias -->
        <div class="col-md-10">
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var noticia in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <img src="@Url.Content("~/Content/Imagenes/" + noticia.Imagen_Ruta)" class="card-img-top" alt="Noticia" style="height:200px; object-fit:cover;">
                            <div class="card-body">
                                <h5 class="card-title">@noticia.Titulo</h5>
                                <p class="card-text">
                                    @noticia.Contenido.Substring(0, Math.Min(100, noticia.Contenido.Length))...
                                </p>
                                <a href="@Url.Action("Details", "Noticias", new { id = noticia.Id_Noticia })" class="btn btn-primary mt-2">
                                    Ver más
                                </a>
                            </div>
                            <div class="card-footer text-muted">
                                Publicado el @noticia.Fecha_Publicacion.ToShortDateString()
                                @if (esEditor || esAdmin)
                                {
                                    <div class="mt-2">
                                        <a href="@Url.Action("Edit", "Noticias", new { id = noticia.Id_Noticia })" class="btn btn-sm btn-warning">Editar</a>
                                        @if (esAdmin)
                                        {
                                            <a href="@Url.Action("Delete", "Noticias", new { id = noticia.Id_Noticia })" class="btn btn-sm btn-danger">Eliminar</a>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
